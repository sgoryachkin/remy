<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.mortbay.jetty.webapp.WebAppContext">

	<!-- an XADataSource -->
	<New id="remyDataSource" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>jdbc/remy_ds</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<!-- <Set name="driverClassName"></Set> -->
				<Set name="url">jdbc:h2:mem:remy;DB_CLOSE_DELAY=-1</Set>
				<Set name="username">sa</Set>
				<Set name="password">sa</Set>
			</New>
		</Arg>
	</New>

	<New id="tx" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>java:comp/UserTransaction</Arg>
		<Arg>
			<New class="bitronix.tm.BitronixTransactionManager" />
		</Arg>
	</New>

</Configure>